{
  "name": "illustrator-script-installer",
  "version": "1.0.3",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.EchoSierraStudio.IllustratorScriptInstaller",
    "win": {
      "target": "nsis",
      "publisherName": "Echo Sierra Studio"
    },
    "nsis": {
      "createDesktopShortcut": "always"
    },
    "publish": "github",
    "icon": "icon.png",
    "productName": "Illustrator Script Installer",
    "buildVersion": "0.0.2",
    "copyright": "Echo Sierra Studio 2020"
  },
  "repository": "https://github.com/sempostma/illustrator-script-installer",
  "keywords": [
    "Electron"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1"
  },
  "dependencies": {
    "electron-store": "^5.1.1",
    "jquery": "^3.4.1",
    "semantic-ui-css": "^2.4.1",
    "sudo-prompt": "^9.1.1"
  }
}